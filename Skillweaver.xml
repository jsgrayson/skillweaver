<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <Button name="SkillweaverListButtonTemplate" virtual="true">
        <Size x="296" y="46"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="icon"><Size x="38" y="38"/><Anchors><Anchor point="LEFT" x="4" y="0"/></Anchors></Texture>
                <Texture parentKey="background" file="Interface\PetBattles\PetJournal"><TexCoords left="0.00195313" right="0.48632813" top="0.00390625" bottom="0.09570313"/><Anchors><Anchor point="TOPLEFT" x="2" y="-2"/><Anchor point="BOTTOMRIGHT" x="-2" y="2"/></Anchors></Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString parentKey="name" inherits="GameFontNormal" justifyH="LEFT" text="New Sequence"><Size x="180" y="16"/><Anchors><Anchor point="TOPLEFT" relativeKey="$parent.icon" relativePoint="TOPRIGHT" x="10" y="-2"/></Anchors></FontString>
                <FontString parentKey="details" inherits="GameFontHighlightSmall" justifyH="LEFT" text="Details"><Size x="180" y="16"/><Anchors><Anchor point="TOPLEFT" relativeKey="$parent.name" relativePoint="BOTTOMLEFT" x="0" y="-2"/></Anchors></FontString>
            </Layer>
        </Layers>
        <HighlightTexture file="Interface\PetBattles\PetJournal"><TexCoords left="0.00195313" right="0.48632813" top="0.10156250" bottom="0.19335938"/><Anchors><Anchor point="TOPLEFT" x="2" y="-2"/><Anchor point="BOTTOMRIGHT" x="-2" y="2"/></Anchors></HighlightTexture>
        <Scripts><OnClick>PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON); Skillweaver_OnListClick(self, button);</OnClick></Scripts>
    </Button>

    <Frame name="SkillweaverFrame" toplevel="true" parent="UIParent" movable="true" enableMouse="true" hidden="true" inherits="PortraitFrameTemplate">
        <Size x="900" y="650"/> <Anchors><Anchor point="CENTER"/></Anchors>
        <Layers>
            <Layer level="OVERLAY" textureSubLevel="1">
                <Texture name="$parentPortrait" parentKey="portrait" file="Interface\Icons\trade_engineering"><Size x="60" y="60"/><Anchors><Anchor point="TOPLEFT" x="-5" y="5"/></Anchors></Texture>
            </Layer>
        </Layers>
        <Frames>
            <Frame name="$parentLeftInset" parentKey="LeftInset" useParentLevel="true" inherits="InsetFrameTemplate">
                <Anchors><Anchor point="TOPLEFT" x="4" y="-60"/><Anchor point="BOTTOMLEFT" x="4" y="26"/></Anchors>
                <Size x="280" y="0"/>
                <Frames>
                    <Frame name="$parentHeader" parentKey="Header"><Size x="0" y="40"/><Anchors><Anchor point="TOPLEFT" x="2" y="-2"/><Anchor point="TOPRIGHT" x="-2" y="-2"/></Anchors>
                        <Frames><Button name="$parentNewButton" inherits="UIPanelButtonTemplate" text="New Sequence"><Size x="120" y="22"/><Anchors><Anchor point="CENTER"/></Anchors></Button></Frames>
                    </Frame>
                    <ScrollFrame name="$parentListScrollFrame" parentKey="ListScrollFrame" inherits="HybridScrollFrameTemplate">
                        <Anchors><Anchor point="TOPLEFT" relativeTo="$parentHeader" relativePoint="BOTTOMLEFT" x="0" y="-5"/><Anchor point="BOTTOMRIGHT" x="-2" y="2"/></Anchors>
                        <Frames><Slider name="$parentScrollBar" parentKey="scrollBar" inherits="HybridScrollBarTemplate"><Anchors><Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="0" y="-15"/><Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="0" y="15"/></Anchors></Slider></Frames>
                    </ScrollFrame>
                </Frames>
            </Frame>

            <Frame name="$parentRightInset" parentKey="RightInset" useParentLevel="true" inherits="InsetFrameTemplate">
                <Anchors><Anchor point="TOPRIGHT" x="-6" y="-60"/><Anchor point="BOTTOMRIGHT" x="-6" y="26"/><Anchor point="TOPLEFT" relativeTo="$parentLeftInset" relativePoint="TOPRIGHT" x="5" y="0"/></Anchors>
                <Frames>
                    <Frame name="$parentPreFrame" parentKey="PreFrame" inherits="InsetFrameTemplate">
                        <Size y="100"/>
                        <Anchors><Anchor point="TOPLEFT" x="5" y="-5"/><Anchor point="TOPRIGHT" x="-5" y="-5"/></Anchors>
                        <Layers><Layer level="OVERLAY"><FontString inherits="GameFontNormalSmall" text="PRE-MACRO (Always Runs First)"><Anchors><Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" x="0" y="2"/></Anchors></FontString></Layer></Layers>
                        <Frames>
                            <ScrollFrame name="$parentScroll" inherits="UIPanelScrollFrameTemplate">
                                <Anchors><Anchor point="TOPLEFT" x="5" y="-5"/><Anchor point="BOTTOMRIGHT" x="-25" y="5"/></Anchors>
                                <ScrollChild><EditBox name="$parentEdit" parentKey="Edit" multiLine="true" autoFocus="false"><Size x="500" y="90"/><Scripts><OnLoad>self:SetFontObject(ChatFontNormal);</OnLoad><OnEscapePressed>self:ClearFocus();</OnEscapePressed></Scripts></EditBox></ScrollChild>
                            </ScrollFrame>
                        </Frames>
                    </Frame>

                    <Frame name="$parentSeqFrame" parentKey="SeqFrame" inherits="InsetFrameTemplate">
                        <Anchors><Anchor point="TOPLEFT" relativeKey="$parent.PreFrame" relativePoint="BOTTOMLEFT" x="0" y="-20"/><Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-5" y="120"/></Anchors>
                        <Layers><Layer level="OVERLAY"><FontString inherits="GameFontNormalSmall" text="SEQUENCE (Loops 1-2-3)"><Anchors><Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" x="0" y="2"/></Anchors></FontString></Layer></Layers>
                        <Frames>
                            <ScrollFrame name="$parentScroll" inherits="UIPanelScrollFrameTemplate">
                                <Anchors><Anchor point="TOPLEFT" x="5" y="-5"/><Anchor point="BOTTOMRIGHT" x="-25" y="5"/></Anchors>
                                <ScrollChild><EditBox name="$parentEdit" parentKey="Edit" multiLine="true" autoFocus="false"><Size x="500" y="300"/><Scripts><OnLoad>self:SetFontObject(ChatFontNormal);</OnLoad><OnEscapePressed>self:ClearFocus();</OnEscapePressed></Scripts></EditBox></ScrollChild>
                            </ScrollFrame>
                        </Frames>
                    </Frame>

                    <Frame name="$parentPostFrame" parentKey="PostFrame" inherits="InsetFrameTemplate">
                        <Size y="100"/>
                        <Anchors><Anchor point="BOTTOMLEFT" x="5" y="5"/><Anchor point="BOTTOMRIGHT" x="-5" y="5"/></Anchors>
                        <Layers><Layer level="OVERLAY"><FontString inherits="GameFontNormalSmall" text="POST-MACRO (Always Runs Last)"><Anchors><Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" x="0" y="2"/></Anchors></FontString></Layer></Layers>
                        <Frames>
                            <ScrollFrame name="$parentScroll" inherits="UIPanelScrollFrameTemplate">
                                <Anchors><Anchor point="TOPLEFT" x="5" y="-5"/><Anchor point="BOTTOMRIGHT" x="-25" y="5"/></Anchors>
                                <ScrollChild><EditBox name="$parentEdit" parentKey="Edit" multiLine="true" autoFocus="false"><Size x="500" y="90"/><Scripts><OnLoad>self:SetFontObject(ChatFontNormal);</OnLoad><OnEscapePressed>self:ClearFocus();</OnEscapePressed></Scripts></EditBox></ScrollChild>
                            </ScrollFrame>
                        </Frames>
                    </Frame>
                </Frames>
            </Frame>
            
            <Button name="$parentSaveButton" inherits="UIPanelButtonTemplate" text="Save Sequence"><Size x="140" y="22"/><Anchors><Anchor point="BOTTOMRIGHT" relativeTo="$parentRightInset" point="BOTTOMRIGHT" x="0" y="-28"/></Anchors></Button>
            <Button name="$parentSpawnButton" parentKey="SpawnButton" inherits="UIPanelButtonTemplate" text="Spawn Action Button"><Size x="160" y="22"/><Anchors><Anchor point="RIGHT" relativeTo="$parentSaveButton" relativePoint="LEFT" x="-10" y="0"/></Anchors></Button>
        </Frames>
        <Scripts>
            <OnLoad>self:RegisterForDrag("LeftButton"); SkillweaverFrameTitleText:SetText("Skillweaver"); </OnLoad>
            <OnDragStart>self:StartMoving();</OnDragStart>
            <OnDragStop>self:StopMovingOrSizing();</OnDragStop>
        </Scripts>
    </Frame>
</Ui>
